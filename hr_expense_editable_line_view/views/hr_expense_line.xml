<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.editable</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expense_line_ids']/tree" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>
            <xpath expr="//field[@name='expense_line_ids']/tree/field[@name='date']" position="before">
                <field name="product_id"/>
            </xpath>
            <xpath expr="//field[@name='expense_line_ids']/tree/field[@name='name']" position="after">
                <field name="quantity"/>
                <field name="unit_amount"/>
            </xpath>
        </field>
    </record>
</odoo>
