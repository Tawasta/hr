<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- Replace the application tags field with another that shows related employee's tags -->
    <record id="hr_employee_tags_from_employee_form" model="ir.ui.view">
        <field name="name">hr.applicant.tags.from.employee.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
        <field name="arch" type="xml">
            <field name="categ_ids" position="replace"/>
            <label for="categ_ids" position="replace"/>

            <field name="type_id" position="after">
                <field name="employee_categ_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="hr_employee_tags_from_employee_kanban" model="ir.ui.view">
        <field name="name">hr.applicant.tags.from.employee.kanban</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_kanban_view_applicant"/>
        <field name="arch" type="xml">
            <field name="categ_ids" position="replace">
                <field name="employee_categ_ids"/>
            </field>

            <field name="categ_ids" position="replace">
                <field name="employee_categ_ids"/>
            </field>            
        </field>
    </record>    

  </data>
</openerp>
