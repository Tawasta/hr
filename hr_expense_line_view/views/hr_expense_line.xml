<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

        <record id="view_expenses_line_employee_tree" model="ir.ui.view">
            <field name="name">hr.expense.line.tree</field>
            <field name="model">hr.expense.line</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <tree string="Expense Lines">
                    <field name="sequence" invisible="1"/>
                    <field name="employee" />
                    <field name="date_value"/>
                    <field name="name"/>
                    <field name="ref"/>
                    <field domain="[('type','in',['normal','contract']), ('parent_id','!=',False)]" name="analytic_account" groups="analytic.group_analytic_accounting"/>
                    <field name="unit_amount"/>
                    <field name="unit_quantity"/>
                    <field name="total_amount" sum="Total"/>
                </tree>
            </field>
        </record>

        <record id="action_expense_lines_all" model="ir.actions.act_window">
            <field name="name">Expense Lines</field>
            <field name="res_model">hr.expense.line</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_expenses_line_employee_tree"/>
        </record>

        <menuitem action="action_expense_lines_all"
                  id="menu_expense_lines_all"
                  name="Expense Lines"
                  parent="hr_expense.next_id_49"
                  sequence="10"
                  groups="base.group_hr_manager"
        />

	</data>

</openerp>