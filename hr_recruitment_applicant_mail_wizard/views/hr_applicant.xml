<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>

    <record id="hr_applicant_mail_wizard_form" model="ir.ui.view">
        <field name="name">hr.applicant.mail.wizard.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
        <field name="arch" type="xml">

          <field name="user_id" position="after">
            <field name="show_email_button" invisible="1"/>
          </field>

          <field name="stage_id" position="before">
            <button name="launch_wizard" string="Send E-mail" type="object" class="oe_highlight"
                    attrs="{ 'invisible': [('show_email_button', '=', False)] }"/>
          </field>

        </field>
    </record>

  </data>
</openerp>