<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_timesheet_sheet_form" model="ir.ui.view">
        <field name="name">hr.timesheet.sheet.form.attendance</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id" ref="hr_timesheet_sheet_attendance.hr_timesheet_sheet_form"/>
        <field name="arch" type="xml">
            <field name="total_attendance" position="after">
                <field name="total_attendance_balance" widget="float_time" />
            </field>
        </field>
    </record>

    <record id="hr_timesheet_sheet_tree" model="ir.ui.view">
        <field name="name">hr.timesheet.sheet.tree.attendance</field>
        <field name="model">hr_timesheet.sheet</field>
        <field name="inherit_id" ref="hr_timesheet_sheet.hr_timesheet_sheet_tree"/>
        <field name="arch" type="xml">
            <field name="date_end" position="after">
                <field name="total_attendance" widget="float_time" />
                <field name="total_attendance_balance" widget="float_time" />
            </field>
        </field>
    </record>
</odoo>
